{
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "cargo": {
          "allTargets": true,
          // "features": ["runtime-benchmarks"],
          "buildScripts": {
            "enable": false
          }
        },
        "rust": {
          "analyzerTargetDir": "target/.zed/.rust-analyzer"
        },
        "procMacro": {
          "enable": false
        },
        "diagnostics": {
          "disabled": ["macro-error"]
        },
        "linkedProjects": ["./operator/Cargo.toml"]
      }
    }
  }
}
