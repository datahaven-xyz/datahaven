{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": false,
    "importHelpers": true,
    "incremental": true,
    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "pretty": true,
    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,
    "baseUrl": "./",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    // Speed
    "tsBuildInfoFile": "tmp/tsconfig.tsbuildinfo",
    "assumeChangesOnlyAffectDirectDependencies": true,
    "paths": {
      "cli-launch": ["./cli/handlers/launch/index.ts"],
      "utils": ["./utils/index.ts"],
      "utils/types": ["./utils/types.ts"],
      "utils/*": ["./utils/*"],
      "mock/eth": ["./mocks/mock-eth.ts"],
      "scripts/*": ["./scripts/*"],
      "cli/*": ["./cli/*"],
      "contract-bindings": ["./contract-bindings/index.ts"],
      "contract-bindings/*": ["./contract-bindings/*"]
    }
  },
  "include": [
    "utils/*.ts",
    "mock/*.ts",
    "scripts/*.ts",
    "suites/**/*.ts",
    "cli/**/*.ts",
    "cli/*.ts",
    "wagmi.config.ts",
    "contract-bindings/*.ts"
  ]
}
